{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2020",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "config/*": ["./src/config/*"],
      "controllers/*": ["./src/controllers/*"],
      "routes/*": ["./src/routes/*"],
      "services/*": ["./src/services/*"],
      "views/*": ["./src/views/*"],
      "models/*": ["./src/models/*"]
    }
  },
  "exclude": ["node_modules", "dist", "prisma.config.ts"]
}
